<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bt.lmis.dao.ItemtypePriceMapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.bt.lmis.model.ItemtypePrice" >
	<result column="id" property="id"/>
	<result column="create_time" property="create_time"/>
	<result column="create_user" property="create_user"/>
	<result column="update_time" property="update_time"/>
	<result column="update_user" property="update_user"/>
	<result column="item_type" property="item_type"/>
	<result column="price" property="price"/>
	<result column="unit" property="unit"/>
	<result column="table_id" property="table_id"/>
</resultMap>
       
<!-- tb_itemtype_price table all fields -->
<sql id="Base_Column_List" >
	 id,create_time,create_user,update_time,update_user,item_type,price,unit,table_id
</sql>
   
   
<!-- 查询条件 -->
<sql id="where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="create_time != null" >
	    and create_time =  #{create_time}
	</if>
	 	<if test="create_user != null and create_user != ''" >
	    and create_user =  #{create_user}
	</if>
	<if test="update_time != null" >
	    and update_time =  #{update_time}
	</if>
	 	<if test="update_user != null and update_user != ''" >
	    and update_user =  #{update_user}
	</if>
	 	<if test="item_type != null and item_type != ''" >
	    and item_type =  #{item_type}
	</if>
	<if test="price != null" >
	    and price =  #{price}
	</if>
	 	<if test="unit != null and unit != ''" >
	    and unit =  #{unit}
	</if>
	<if test="table_id != null" >
	    and table_id =  #{table_id}
	</if>
</trim>
</sql>
   

<!-- 插入产品价格表 -->
<insert id="insert" parameterType="com.bt.lmis.model.ItemtypePrice" >
  insert into tb_itemtype_price(id,create_time,create_user,update_time,update_user,item_type,price,unit,table_id)
 values(#{id},#{create_time},#{create_user},#{update_time},#{update_user},#{item_type},#{price},#{unit},#{table_id})
</insert>

<!-- 修改产品价格表-->  
 <update id="update" parameterType="com.bt.lmis.model.ItemtypePrice" >
  update tb_itemtype_price set create_time=#{create_time},create_user=#{create_user},update_time=#{update_time},update_user=#{update_user},item_type=#{item_type},price=#{price},unit=#{unit},table_id=#{table_id} where id=#{id}
 </update>
 
 <!-- 选择修改产品价格表-->
<update id="updateBySelective" parameterType="com.bt.lmis.model.ItemtypePrice" >
	update tb_itemtype_price set 
	<trim  suffixOverrides="," >
	<if test="create_time != null  ">
		create_time=#{create_time},
	</if>
	<if test="create_user != null  and create_user != '' ">
		create_user=#{create_user},
	</if>
	<if test="update_time != null  ">
		update_time=#{update_time},
	</if>
	<if test="update_user != null  and update_user != '' ">
		update_user=#{update_user},
	</if>
	<if test="item_type != null  and item_type != '' ">
		item_type=#{item_type},
	</if>
	<if test="price != null  ">
		price=#{price},
	</if>
	<if test="unit != null  and unit != '' ">
		unit=#{unit},
	</if>
	<if test="table_id != null  ">
		table_id=#{table_id},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除产品价格表 -->
<update id="delete" parameterType="Object">
	delete 	 from tb_itemtype_price where id = #{id}
</update>
<!-- 批量删除产品价格表 -->
<delete id="batchDelete" parameterType="Object">
	delete 	 from tb_itemtype_price where id in 
	<foreach collection="array" index="index" item="item" open="(" separator="," close=")">  
       	#{item}  
   	</foreach> 
</delete>
 
<!-- 依据主键查找产品价格表 -->
<select id="selectById"  resultMap="BaseResultMap" >
	select <include refid="Base_Column_List" /> 
	 from tb_itemtype_price where id = #{id}
</select>
  	
<!-- 产品价格表 列表总数  为分页组件使用-->
<select id="pageTotalRecord" resultType="java.lang.Long"  parameterType="com.bt.lmis.controller.form.ItemtypePriceQueryParam">
	select count(1) from tb_itemtype_price 
	<include refid="where_Clause"/>
</select>
  	
<!-- 分页中的产品价格表集合，为分页组件使用 -->
<select id="pageData" resultMap="BaseResultMap"  parameterType="com.bt.lmis.controller.form.ItemtypePriceQueryParam">
	select 
	<include refid="Base_Column_List"/>
	from tb_itemtype_price 
	<include refid="where_Clause"/>
	<if test="orderCondition != null and orderCondition != ''" >
      ${orderCondition}
    </if>
    ${queryCondition}
</select>


<!--依据条件统计 产品价格表总数-->
<select id="count" resultType="java.lang.Long"  parameterType="com.bt.lmis.controller.form.ItemtypePriceQueryParam">
	select count(1) from tb_itemtype_price 
	<include refid="where_Clause"/>
</select>
  	
<!-- 满足条件的产品价格表集合 -->
<select id="findAll" resultMap="BaseResultMap"  parameterType="com.bt.lmis.controller.form.ItemtypePriceQueryParam">
	select 
	<include refid="Base_Column_List"/>
	from tb_itemtype_price 
	<include refid="where_Clause"/>
	<if test="orderCondition != null and orderCondition != ''" >
     ${orderCondition}
    </if>
</select>
  	
  <delete id='deleteByTbId' parameterType='Object'>
	   delete from tb_itemtype_price where table_id=${table_id}
	</delete>	
  	
</mapper>   
